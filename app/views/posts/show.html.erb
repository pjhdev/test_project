<h2><%= bulletin_name params[:bulletin_id] %></h2>

<table class='table'>
  <tr>
    <th>Title</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= @post.content %></td>
  </tr>
  <% if @post.bulletin.post_type == :gallery %>
    <tr>
      <th>Image</th>
      <td class='image'><%= image_tag(@post.picture_url(:thumb)) if @post.picture? %></td>
    </tr>
  <% end %>
  <tr>
    <th>Created at</th>
    <td><%= @post.created_at %></td>
  </tr>
  <tr>
    <th>Tag list</th>
    <td><%= tag_icons @post.tag_list %></td>
  </tr>
</table>

<%= link_to 'Edit', (@bulletin.present? ? edit_bulletin_post_path(@bulletin)  : edit_post_path(@post)), class: 'btn btn-default' %>
<%= link_to 'List', (@bulletin.present? ? bulletin_posts_path(@bulletin) : posts_path), class: 'btn btn-default' %>

<%= render "comments/comments" %>
